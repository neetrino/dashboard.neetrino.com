# Neetrino Project .gitignore

# Исключаем все сайты в www кроме нашего проекта
# Исключаем все папки в www кроме dashboard, plugin, shared, docs, scripts
www/*
!www/dashboard/
!www/plugin/
!www/shared/
!www/docs/
!www/scripts/
!www/README.md
!www/PROGRESS.md
!www/.gitignore

# WordPress core files (исключаем полностью)
website/wp-admin/
website/wp-includes/
website/wp-*.php
website/index.php
website/xmlrpc.php
website/.htaccess
website/license.txt
website/readme.html

# WordPress content (исключаем все кроме нашего плагина)
website/wp-content/themes/
website/wp-content/uploads/
website/wp-content/plugins/akismet/
website/wp-content/plugins/hello.php
website/wp-content/plugins/index.php
website/wp-content/plugins/Neetrino3.7.0.zip

# WordPress config (чувствительные данные)
website/wp-config.php

# Dashboard specific
dashboard/logs/*.log
dashboard/.installed
dashboard/.htaccess

# PHP
*.log
*.cache
*.tmp
*.temp

# IDE
.vscode/
.idea/
*.swp
*.swo
*~

# OS
.DS_Store
Thumbs.db

# Composer
vendor/
composer.lock

# Node.js (если будет использоваться)
node_modules/
npm-debug.log
yarn-error.log

# Environment files
.env
.env.local
.env.production

# Backup files
*.bak
*.backup
*.old

# Test files
test_*.php
*_test.php

# Temporary files
temp/
tmp/
cache/

# Database dumps (кроме схемы)
*.sql
!database_schema_simple.sql

# Compiled files
*.min.js
*.min.css
*.map
